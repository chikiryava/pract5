<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background">
    <ImageView
        android:id="@+id/studentImageInfo"
        android:layout_width="100sp"
        android:layout_height="100sp" />
    <TextView
        android:id="@+id/studentNameTextViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/studentBirthdayTextViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/studentCoursesTextViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/specialityNameTextViewInfo"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/budgetTextViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>